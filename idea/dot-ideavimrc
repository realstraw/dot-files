set number
set colorcolumn=100

let mapleader = ","
let maplocalleader = " "
nnoremap <Leader>, ,

" Remap buffer next and previous
nnoremap <Leader>jj :bn<cr>
nnoremap <Leader>kk :bp<cr>

nnoremap <Leader>ff :action GotoFile<CR>
nnoremap <Leader>fg :action TextSearchAction<CR>
nnoremap <Leader>mm :action GotoAction<CR>
nnoremap <space>f :action ReformatCode<CR>
nnoremap ]d :action GotoNextError<CR>
